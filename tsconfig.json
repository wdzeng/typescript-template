{
  "compilerOptions": {
    // Environment and module options.
    "target": "es2022",
    "module": "es2022",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "lib": [
      "es2022",
      // Uncomment these to access document and fetch API.
      // "dom",
      // "dom.iterable"
    ],
    "rootDir": "src",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "strict": true,
    "alwaysStrict": true,
    // This may cause some inconvenient behavior.
    // https://github.com/microsoft/TypeScript/issues/56389
    "noUncheckedIndexedAccess": true
  },
  "include": ["src/**/*.ts", "types/global.d.ts"]
}
